{
    "cSpell.words": [
        "deepdiff",
        "importlib",
        "pygrep",
        "pyupgrade",
        "redef",
        "sunray",
        "unfixable"
    ],
    "ruff.enable": true,
    "ruff.fixAll": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit",
        }
    },
}
